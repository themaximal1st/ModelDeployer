<%- include('../partials/page_header', { title: "MODEL DETAILS"}) -%>

<div class="flex flex-col gap-8 justify-start w-full">

    <div class="flex flex-col gap-1">
        <div class="uppercase text-xs">
            Endpoint
        </div>
        <div>
            <code><%= model.id %></code>
        </div>
    </div>

    <div class="flex flex-col gap-1">
        <div class="uppercase text-xs">
            Service
        </div>
        <div>
            <%= model.service %>
        </div>
    </div>

    <div class="flex flex-col gap-1">
        <div class="uppercase text-xs">
            Model
        </div>
        <div>
            <%= model.model %>
        </div>
    </div>


    <div class="flex flex-col gap-1">
        <div class="uppercase text-xs">
            Options
        </div>
        <div>
            <%= locals.Envtools.fromJSON(model.options) || "-" %>
        </div>
    </div>

    <div class="flex flex-col gap-1">
        <div class="uppercase text-xs">
            Secrets
        </div>
        <div>
            <%= locals.Envtools.fromJSON(model.secrets) || "-" %>
        </div>
    </div>

    <form action="/models/<%= model.id %>/remove" method="POST">
        <button type="submit" class="border border-red-500 uppercase tracking-wider p-1 text-xs text-red-800" onclick="return confirm('Are you sure you want to delete this model?')">Delete</button>
    </form>
</div>

<%- include('../partials/page_footer') -%>